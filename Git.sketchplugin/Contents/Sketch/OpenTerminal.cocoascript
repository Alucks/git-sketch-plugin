// Opens terminal in working directory (cmd alt ctrl o)

@import 'shared.cocoascript'

var onRun = function(context) {
  var doc = context.document;
  var path = shared.getCurrentDirectory(doc);
  try {
    NSWorkspace.sharedWorkspace().openFile_withApplication_(path, @"iTerm");
  } catch () {
    NSWorkspace.sharedWorkspace().openFile_withApplication_(path, @"Terminal");
  }
}
